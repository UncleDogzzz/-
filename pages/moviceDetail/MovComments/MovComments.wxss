/* pages/comment/comment.wxss */
.comment{
    padding: 20rpx;
  }
  .title{
    font-weight: bold;
    font-size: 24rpx;
  }
  .commentInfo{
    display: flex;
    margin-top:50rpx;
  }
  .commentInfo .avatar image{
    height: 80rpx;
    width: 80rpx;
    border-radius: 50% 50%;
  }
  .main{
    width: 80%;
  }
  .info{
    display: flex;
    justify-content: space-between;
    padding-left: 30rpx;
    width: 100%;
  }
  .info .likeCount{
    color: #878787;
  }
  .info .likeCount image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
  }
  .content{
    margin: 30rpx 0;
    padding-left: 30rpx;
  }
  .userInfo .name{
    color: #878787;
  }
  .userInfo .time{
    color: #c7c3c3;
    font-size: 20rpx; 
  }
  
  .reply{
    background-color: #ebe9e9;
    padding-left: 30rpx;
    margin-bottom: 55rpx;
    margin-left: 30rpx;
    color: #71b0c8;
    font-size: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    width: 95%;
  }
  .hr{
    margin-top: 30rpx;
    height: 2rpx;
    background-color: #d4d3d3;
    margin-left: 30rpx;
    width: 100%;
  }
  
  .send-comment{
    position: fixed;
    z-index: 100;
    height: 50rpx;
    width: 750rpx;
    display: flex;
    background-color: white;
    bottom: 0;
    /* padding: 20rpx; */
  }
  
  .send-comment input{
    border:2rpx solid #444444;
    background-color: #eeeeee;
    width: 600rpx;
    height: 40rpx;
  }
  
  .send-comment button{
   border:2rpx solid #444444;
   margin-left: 10rpx;
   width: 150rpx;
   height: 40rpx;
   line-height: 40rpx;
   font-size: 24rpx;
  
  }
  